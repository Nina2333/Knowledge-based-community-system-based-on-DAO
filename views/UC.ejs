<body class="bg-light">
<%- include('head.ejs') %>
<!--album example-->

<div class="container p-5">
    <br>
    <div class="row g-5">
        <div class="modal-body p-5 ">
            <nav class="navbar navbar-expand-lg ">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/vote">个人信息</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/vote/create">修改信息</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <ul class="d-grid gap-4 m-3 list-unstyled">
                <li class="d-flex gap-4">
                    <div class="col">
                        <p class="mb-0 opacity-75">姓名：<%= user[0].name %></p>
                    </div>
                    <div class="col">
                        <p class="mb-0 opacity-75">性别：<%= user[0].gender %></p>
                    </div>
                </li>
                <li class="d-flex gap-4">
                    <div class="col">
                        <p class="mb-0">账户地址：<%= user[0].name %></p>
                    </div>
                    <div class="col">
                        <p class="mb-0 opacity-75">生日：<%= user[0].birthday %></p>
                    </div>
                </li>
                <li class="d-flex gap-4">
                    <div class="col">
                        <p class="mb-0">电话：<%= user[0].phone %></p>
                    </div>
                    <div class="col">
                        <p class="mb-0 opacity-75">邮箱：<%= user[0].email %></p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <hr>
    <div class="row p-3">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#home">获得的社区token</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#menu1">创作的文章</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#menu2">社区积分</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#menu3">管理员</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="p-3">
            <div class="tab-content">
                <div id="home" class="container tab-pane active"><br>

                    <% for(var i = 0; i < community.length; i++) { %>
                        <article class="blog-post">
                            <h4 class="blog-post-title mb-3">
                                <a href="/community/communityDetail?id=<%= community[i].communityID %>">
                                    <%= community[i].comm_name %></a>
                            </h4>
                            <blockquote>
                                <p><%= community[i].comm_topic %></p>
                            </blockquote>
                        </article>
                        <hr>
                    <% } %>
                </div>
                <div id="menu1" class="container tab-pane fade"><br>
                    <% if (article.length == 0){ %>
                        <h4>还没有创作文章</h4>
                    <% } else { %>
                        <% for(var i = 0; i < article.length; i++) { %>
                            <article class="blog-post">
                                <h2 class="blog-post-title mb-3">
                                    <a href="/community/article-detail?aid=<%= article[i].articleId %>">
                                        <%= article[i].aName %></a>
                                </h2>
                                <p class=" blog-post-meta"> 时间：<%= timestampToTime(article[i].publishTime) %> </p>
                                <p class="blog-post-meta"> 作者：<%= article[i].publisher %> </p>
                                <blockquote>
                                    <p><%= article[i].topic %></p>
                                </blockquote>
                                <a href="#" class="btn btn-primary position-relative">修改
                                </a>
                                <a href="#" class="btn btn-danger position-relative">删除
                                </a>
                            </article>
                            <hr>
                        <% } %>
                    <% } %>
                </div>
                <div id="menu2" class="container tab-pane fade"><br>
                    <% for(var i = 0; i < scores.length; i++) { %>
                        <article class="blog-post">
                            <h4 class="blog-post-title mb-3">
                                <%= scores[i].tokenName %>
                                <span class="badge bg-primary">积分数： <%= scores[i].score %> </span>
                            </h4>

                        </article>
                        <hr>
                    <% } %>
                </div>
                <div id="menu3" class="container tab-pane fade"><br>
                    <% if (admin.length == 0){ %>
                        <h4>暂无需管理的论坛</h4>
                    <% } else { %>
                        <% for(var i = 0; i < admin.length; i++) { %>
                            <article class="blog-post">
                                <h4 class="blog-post-title mb-3">
                                    <%= admin[i].c_name %>
                                </h4>
                                <a href="/vote/create" class="btn btn-primary ">决议创建

                                </a>
                                <a href="#" class="btn btn-danger position-relative">举报事项
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        10
                                        <span class="visually-hidden">unread messages</span>
                                    </span>
                                </a>
                                <a href="#" class="btn btn-dark position-relative">黑名单
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        3
                                        <span class="visually-hidden">unread messages</span>
                                    </span>
                                </a>
                            </article>
                            <hr>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

