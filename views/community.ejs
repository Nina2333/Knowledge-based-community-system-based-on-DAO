<div class="container">
    <div class="d-flex align-items-center p-3 my-3 text-white bg-purple rounded shadow-sm">
        <img class="me-3" src="/images/3.svg" alt="" width="48" height="38">
        <div class="lh-1">
            <h1 class="h6 mb-0 text-white lh-1">基于 DAO 的知识型社区</h1>
            <small> </small>
        </div>
    </div>
    <div class="row g-4">
        <div class="modal-body pt-3 px-5 col-md-5 col-lg-4">
            <h4 class="fw-bold mb-0">已加入的论坛</h4>
            <ul class="d-grid gap-4 my-5 list-unstyled">
                <% if(userCommunity.length == 0){ %>
                    <li class="d-flex gap-4">
                        <p class="lead">暂无加入的论坛</p>
                    </li>
                <% } else { %>
                    <% for(var i = 0; i < userCommunity.length; i++) { %>
                        <li class="d-flex gap-4">
                            <a href="/community/userArticle?cid=<%= userCommunity[i].communityID %>"
                               class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                                <img src="/images/3.svg" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div>
                                        <h4 class="mb-0"><%= userCommunity[i].comm_name %></h4>
                                        <p class="mb-0 opacity-75"><%= userCommunity[i].comm_topic %></p>
                                    </div>
                                </div>
                            </a>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
        <div class="col-md-7 col-lg-8">
            <nav class="navbar navbar-expand-lg ">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">论坛列表</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/ipfs">创建论坛</a>
                            </li>
                        </ul>
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-primary" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </nav>
            <hr>
            <article class="blog-post">
                <% for(var i = 0; i < community.length; i++) { %>
                    <div class="margin1">
                        <div class="col-md-12 card">
                            <div class=" row g-0  rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative ">
                                <div class="col p-4 d-inline-flex flex-column position-static">
                                    <h3 class="mb-0"><%= community[i].c_name %></h3>
                                    <div class="mb-1 text-muted"><%= timestampToTime(community[i].time) %></div>
                                    <p class="card-text mb-auto"><%= community[i].topic %></p>
                                    <p>......</p>
                                    <a href="/community/communityDetail?cid=<%= community[i].communityId %>"
                                       class="stretched-link">详情</a>
                                </div>
                                <div class="col-auto d-none d-lg-block">
                                    <img class="form-img" src="./images/1.jpeg">
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </article>
        </div>
    </div>
</div>

